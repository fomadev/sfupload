    "type": "library",
    "version": "1.2.0",
    "license": "MIT",
    "keywords": ["upload", "file", "psr-7", "security", "php8", "validation"],
    "authors": [
        {
            "name": "MOLENGO MALANDA FORDI",
            "email": "fordimalanda7@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "SfUpload\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",
        "psr/http-message": "^1.0 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    }
